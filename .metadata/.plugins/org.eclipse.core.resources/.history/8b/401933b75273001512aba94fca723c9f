function countBs(astring){
	var i = astring.length
	var c =0;
	while (i > 0){
		if (astring.charAt(i-1)=="B")  c +=1;
		i-=1;
		
	}
	return(c);
}
console.log(countBs("BBC"));
function countChars(astring,achar){
		var i = astring.length-1, c=0;
		while (i>0){
			if (astring.charAt(i)==achar) c+=1
			i-=1;
		}return (c);
}